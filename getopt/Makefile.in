VERSION = @VERSION@

top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH  = @srcdir@

SHELL = /bin/sh

CC = @CC@
CFLAGS = @CFLAGS@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
LDFLAGS = @LDFLAGS@
RANLIB = @RANLIB@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
infodir = @infodir@
libdir = @libdir@
includedir = @includedir@
oldincludedir = @oldincludedir@

#----------------------------------------------------------------

SHELL = /bin/sh

SRCS = getopt.c getopt1.c
OBJS = getopt.o getopt1.o
INCLUDES=-I.. -I$(top_srcdir)/include 

all: $(OBJS)

.PHONY: all install uninstall clean realclean distclean

.SUFFIXES:
.SUFFIXES: .c .o

.c.o:
	$(CC) $(CFLAGS) $(INCLUDES) -c $<

getopt.o: getopt.c getopt.h 

getopt1.o: getopt1.c getopt.h 

install:

uninstall:

clean:
	-rm -f *.o core test* data*

distclean: clean
	-rm -f *~ \#* Makefile TAGS

realclean: distclean

TAGS: $(SRCS)
	cd $(srcdir) && etags $(SRCS)
