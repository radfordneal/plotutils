VERSION = @VERSION@

top_srcdir = @top_srcdir@
srcdir = @srcdir@
VPATH  = @srcdir@

SHELL = /bin/sh

CC = @CC@
CFLAGS = @CFLAGS@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
RANLIB = @RANLIB@
MAKEINFO = makeinfo
TEXI2DVI = texi2dvi

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
infodir = @infodir@
libdir = @libdir@
includedir = @includedir@
oldincludedir = @oldincludedir@

#----------------------------------------------------------------

all: info

.PHONY: all install uninstall clean realclean distclean TAGS

.SUFFIXES:
.SUFFIXES: .c .o

info: plotutils.info

# Use --no-split to avoid creating filenames > 14 chars.
plotutils.info: plotutils.texi
	$(MAKEINFO) $(srcdir)/plotutils.texi --no-split --output=$@

dvi: plotutils.dvi

plotutils.dvi: plotutils.texi
	$(TEXI2DVI) $(srcdir)/plotutils.texi

install: plotutils.info
	$(top_srcdir)/mkdirs.sh $(infodir)
	if test -f $(srcdir)/plotutils.info; then \
		for i in $(srcdir)/plotutils.info*; do \
		$(INSTALL_DATA) $$i $(infodir); \
		done; \
	fi

uninstall: 
	-rm -f $(infodir)/plotutils.info*

clean:
	-rm -f *.aux *.cp *.cps *.dvi *.fn *.fns *.ky *.kys *.log
	-rm -f *.pg *.pgs *.toc *.tp *.tps *.vr *.vrs

distclean: clean
	-rm -f *~ \#* Makefile

realclean: distclean
	-rm -f *.info

TAGS:
